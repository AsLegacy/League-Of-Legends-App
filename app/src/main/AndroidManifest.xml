<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.ipsaous.com.leagueoflegendtuto" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SearchActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HistoriqueActivity"
            android:label="@string/title_activity_historique" >
        </activity>
        <activity
            android:name=".DetailsMatchActivity"
            android:label="@string/title_activity_details_match" >
        </activity>
        <activity
            android:name=".ChampionsActivity"
            android:label="@string/title_activity_champions" >
        </activity>
    </application>

</manifest>
